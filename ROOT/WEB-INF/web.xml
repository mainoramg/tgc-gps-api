<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   version="3.0"
   metadata-complete="true">

   <display-name>GPS API</display-name>
   <description>GPS API</description>

   <!-- ################################################################ -->
   <!-- ### Version 1: Get all data for latest location for given SN ### -->
   <!-- ################################################################ -->
   <servlet>
      <servlet-name>api1LatestLocation</servlet-name>
      <servlet-class>com.api1.LatestLocation</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>api1LatestLocation</servlet-name>
      <url-pattern>/v1/all/now/sn/*</url-pattern>
   </servlet-mapping>

   <!-- ########################################################################################### -->
   <!-- ### Version 1: Get latitude and longitude on DD format for latest location for given SN ### -->
   <!-- ########################################################################################### -->
   <servlet>
      <servlet-name>api1LatestLatLngDD</servlet-name>
      <servlet-class>com.api1.LatestLatLngDD</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>api1LatestLatLngDD</servlet-name>
      <url-pattern>/v1/locationdd/now/sn/*</url-pattern>
   </servlet-mapping>

   <!-- ############################################################################ -->
   <!-- ### Version 1: Get all data for range of location for given SN and dates ### -->
   <!-- ############################################################################ -->
   <servlet>
      <servlet-name>api1LocationsRange</servlet-name>
      <servlet-class>com.api1.LocationsRange</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>api1LocationsRange</servlet-name>
      <url-pattern>/v1/all/between/sn/*</url-pattern>
   </servlet-mapping>

   <!-- ######################################################################## -->
   <!-- ### Version 1: Get Google Maps link for latest location for given SN ### -->
   <!-- ######################################################################## -->
   <servlet>
      <servlet-name>api1LatestLocationGoogleMaps</servlet-name>
      <servlet-class>com.api1.LatestLocationGoogleMaps</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>api1LatestLocationGoogleMaps</servlet-name>
      <url-pattern>/v1/gmaps/now/*</url-pattern>
   </servlet-mapping>
</web-app>
